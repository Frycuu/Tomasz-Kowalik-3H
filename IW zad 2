<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formularz</title>
</head>

<body>

    <form action="" method="POST">

        <input type="number" name="liczba1" placeholder="wpisz pierwszą liczbę" />

        <input type="submit" value="Oblicz" />

        <div class="wynik"></div>
    </form>

    <script>


        const formularz = document.querySelector('form');
        const diw = document.querySelector('div.wynik')

        formularz.addEventListener('submit', (e) => {
            e.preventDefault();

            const l1 = document.querySelector('input[name=liczba1]').value * 1;


    if (l1>5 && l1!=6 && l1!=12)
    {
        diw.textContent = `Liczba ${l1} liczba jest większa od 5, rózna od 6 i 12`;
    }
    
     else if (l1==0)
    {
        diw.textContent = `Liczba ${l1} jest równa 0`;
    }
    
    else 
    {
        diw.textContent = `Liczba ${l1} nie spełnia warunku`;
    }    


        });



    </script>


</body>

</html>
